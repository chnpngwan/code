<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daniel.dao.CategoryDAO">
    <insert id="add" parameterType="com.daniel.pojo.Category" >
        insert into category ( name ) values (#{name})
    </insert>

    <delete id="delete" parameterType="com.daniel.pojo.Category" >
        delete from category where id= #{id}
    </delete>

    <select id="get" parameterType="_int" resultType="com.daniel.pojo.Category">
        select * from   category  where id= #{id}
    </select>

    <update id="update" parameterType="com.daniel.pojo.Category" >
        update category set name=#{name} where id=#{id}
    </update>

    <select id="list" resultType="com.daniel.pojo.Category">
        select * from   category
    </select>

    <select id="count" resultType="_int">
        select count(id) from category
    </select>

</mapper>