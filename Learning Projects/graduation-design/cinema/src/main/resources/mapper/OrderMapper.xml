<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cinema.mapper.OrderMapper">
    <select id="getOrderListByDate" resultType="com.example.cinema.entity.Order">
        SELECT
            *
        FROM
            tb_order
        WHERE
            CONVERT (create_time, date) = #{date} AND order_status = 1;
    </select>
</mapper>

