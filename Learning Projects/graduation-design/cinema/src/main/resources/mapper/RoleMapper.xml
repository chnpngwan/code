<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cinema.mapper.RoleMapper">
    <resultMap id="RolePermissionMap" type="com.example.cinema.dto.ResourceRoleDTO">
        <id column="id" property="id"/>
        <result column="url" property="url"/>
        <result column="request_method" property="requestMethod"/>
        <collection property="roleList" ofType="java.lang.String">
            <constructor>
                <arg column="label"/>
            </constructor>
        </collection>
    </resultMap>

    <select id="getResourceRoleList" resultMap="RolePermissionMap">
        SELECT re.id,
               url,
               request_method,
               label
        FROM tb_resource re
                 LEFT JOIN tb_role_resource rep on re.id = rep.resource_id
                 LEFT JOIN tb_role r on rep.role_id = r.id
        WHERE parent_id is NOT NULL
          AND is_anonymous = 0
    </select>

    <select id="getRoleListByUserId" resultType="java.lang.String">
        SELECT label
        FROM tb_role r,
             tb_user_role ur
        WHERE r.id = ur.role_id
          AND ur.user_id = #{userId}
    </select>
</mapper>

