<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.AssetCompanyMapper">
    
    <resultMap type="AssetCompany" id="AssetCompanyResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="parentId"    column="parent_id"    />
        <result property="name"    column="name"    />
        <result property="number"    column="number"    />
        <result property="amount"    column="amount"    />
    </resultMap>

    <sql id="selectAssetCompanyVo">
        select id, code, parent_id, name, number, amount from asset_company
    </sql>

    <select id="selectAssetCompanyList" parameterType="AssetCompany" resultMap="AssetCompanyResult">
        <include refid="selectAssetCompanyVo"/>
        <where>  
            <if test="code != null  and code != ''"> and code like concat('%', #{code}, '%')</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectAssetCompanyById" parameterType="Long" resultMap="AssetCompanyResult">
        <include refid="selectAssetCompanyVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAssetCompany" parameterType="AssetCompany" useGeneratedKeys="true" keyProperty="id">
        insert into asset_company
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null and code != ''">code,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="number != null">number,</if>
            <if test="amount != null">amount,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null and code != ''">#{code},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="number != null">#{number},</if>
            <if test="amount != null">#{amount},</if>
         </trim>
    </insert>

    <update id="updateAssetCompany" parameterType="AssetCompany">
        update asset_company
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="number != null">number = #{number},</if>
            <if test="amount != null">amount = #{amount},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAssetCompanyById" parameterType="Long">
        delete from asset_company where id = #{id}
    </delete>

    <delete id="deleteAssetCompanyByIds" parameterType="String">
        delete from asset_company where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>