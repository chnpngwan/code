<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.AssetRegionMapper">
    
    <resultMap type="AssetRegion" id="AssetRegionResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="parentId"    column="parent_id"    />
    </resultMap>

    <sql id="selectAssetRegionVo">
        select id, code, name, parent_id from asset_region
    </sql>

    <select id="selectAssetRegionList" parameterType="AssetRegion" resultMap="AssetRegionResult">
        <include refid="selectAssetRegionVo"/>
        <where>  
            <if test="code != null  and code != ''"> and code like concat('%', #{code}, '%')</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectAssetRegionById" parameterType="Integer" resultMap="AssetRegionResult">
        <include refid="selectAssetRegionVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAssetRegion" parameterType="AssetRegion" useGeneratedKeys="true" keyProperty="id">
        insert into asset_region
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null and code != ''">code,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="parentId != null">parent_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null and code != ''">#{code},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="parentId != null">#{parentId},</if>
         </trim>
    </insert>

    <update id="updateAssetRegion" parameterType="AssetRegion">
        update asset_region
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAssetRegionById" parameterType="Integer">
        delete from asset_region where id = #{id}
    </delete>

    <delete id="deleteAssetRegionByIds" parameterType="String">
        delete from asset_region where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>