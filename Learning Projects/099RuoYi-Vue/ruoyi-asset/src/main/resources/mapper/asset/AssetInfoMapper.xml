<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.AssetInfoMapper">
    
    <resultMap type="AssetInfo" id="AssetInfoResult">
        <result property="id"    column="id"    />
        <result property="num"    column="num"    />
        <result property="status"    column="status"    />
        <result property="name"    column="name"    />
        <result property="classifyId"    column="classify_id"    />
        <result property="photo"    column="photo"    />
        <result property="type"    column="type"    />
        <result property="amount"    column="amount"    />
        <result property="unit"    column="unit"    />
        <result property="snNum"    column="sn_num"    />
        <result property="companyId"    column="company_id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="place"    column="place"    />
        <result property="sourceId"    column="source_id"    />
        <result property="purchaseTime"    column="purchase_time"    />
        <result property="createUser"    column="create_user"    />
        <result property="createTime"    column="create_time"    />
        <result property="remark"    column="remark"    />
        <result property="region"    column="region"    />
    </resultMap>

    <sql id="selectAssetInfoVo">
        select id, num, status, name, classify_id, photo, type, amount, unit, sn_num, company_id, dept_id, place, source_id, purchase_time, create_user, create_time, remark, region from asset_info
    </sql>

    <select id="selectAssetInfoList" parameterType="AssetInfo" resultMap="AssetInfoResult">
        <include refid="selectAssetInfoVo"/>
        <where>  
            <if test="num != null  and num != ''"> and num like concat('%', #{num}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="classifyId != null "> and classify_id = #{classifyId}</if>
            <if test="snNum != null  and snNum != ''"> and sn_num like concat('%', #{snNum}, '%')</if>
            <if test="sourceId != null "> and source_id = #{sourceId}</if>
            <if test="params.beginPurchaseTime != null and params.beginPurchaseTime != '' and params.endPurchaseTime != null and params.endPurchaseTime != ''"> and purchase_time between #{params.beginPurchaseTime} and #{params.endPurchaseTime}</if>
        </where>
    </select>
    
    <select id="selectAssetInfoById" parameterType="Long" resultMap="AssetInfoResult">
        <include refid="selectAssetInfoVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAssetInfo" parameterType="AssetInfo" useGeneratedKeys="true" keyProperty="id">
        insert into asset_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="num != null and num != ''">num,</if>
            <if test="status != null">status,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="classifyId != null">classify_id,</if>
            <if test="photo != null">photo,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="amount != null">amount,</if>
            <if test="unit != null and unit != ''">unit,</if>
            <if test="snNum != null and snNum != ''">sn_num,</if>
            <if test="companyId != null">company_id,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="place != null and place != ''">place,</if>
            <if test="sourceId != null">source_id,</if>
            <if test="purchaseTime != null">purchase_time,</if>
            <if test="createUser != null">create_user,</if>
            <if test="createTime != null">create_time,</if>
            <if test="remark != null">remark,</if>
            <if test="region != null and region != ''">region,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="num != null and num != ''">#{num},</if>
            <if test="status != null">#{status},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="classifyId != null">#{classifyId},</if>
            <if test="photo != null">#{photo},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="amount != null">#{amount},</if>
            <if test="unit != null and unit != ''">#{unit},</if>
            <if test="snNum != null and snNum != ''">#{snNum},</if>
            <if test="companyId != null">#{companyId},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="place != null and place != ''">#{place},</if>
            <if test="sourceId != null">#{sourceId},</if>
            <if test="purchaseTime != null">#{purchaseTime},</if>
            <if test="createUser != null">#{createUser},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="region != null and region != ''">#{region},</if>
         </trim>
    </insert>

    <update id="updateAssetInfo" parameterType="AssetInfo">
        update asset_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="num != null and num != ''">num = #{num},</if>
            <if test="status != null">status = #{status},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="classifyId != null">classify_id = #{classifyId},</if>
            <if test="photo != null">photo = #{photo},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="unit != null and unit != ''">unit = #{unit},</if>
            <if test="snNum != null and snNum != ''">sn_num = #{snNum},</if>
            <if test="companyId != null">company_id = #{companyId},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="place != null and place != ''">place = #{place},</if>
            <if test="sourceId != null">source_id = #{sourceId},</if>
            <if test="purchaseTime != null">purchase_time = #{purchaseTime},</if>
            <if test="createUser != null">create_user = #{createUser},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="region != null and region != ''">region = #{region},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAssetInfoById" parameterType="Long">
        delete from asset_info where id = #{id}
    </delete>

    <delete id="deleteAssetInfoByIds" parameterType="String">
        delete from asset_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>